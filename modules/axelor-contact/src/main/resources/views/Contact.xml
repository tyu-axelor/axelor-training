<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views https://axelor.com/xml/ns/object-views/object-views_6.0.xsd">

    <grid name="contact-grid"
          title="Contacts"
          model="com.axelor.apps.contact.db.Contact">
        <field name="fullName" />
        <field name="email" widget="email"/>
        <field name="phone" />
        <field name="dateOfBirth" />
    </grid>

    <form name="contact-form"
          title="Contact"
          model="com.axelor.apps.contact.db.Contact">
        <panel name="overviewPanel" title="Contact Overview">
            <field name="fullName" readonly="false">
                <editor>
                    <field name="title" colSpan="3"/>
                    <field name="firstName" colSpan="4"/>
                    <field name="lastName" colSpan="5"/>
                </editor>
            </field>
            <field name="dateOfBirth" />
            <field name="email">
                <viewer><![CDATA[
        <a href="mailto:{{record.email}}">{{record.email}}</a>
        ]]></viewer>
            </field>
            <field name="phone">
                <viewer><![CDATA[
        <a href="tel:{{record.phone}}">{{record.phone}}</a>
        ]]></viewer>
            </field>
        </panel>
        <panel name="aboutMePanel" title="About me">
            <field name="notes" showTitle="false" colSpan="12"/>
        </panel>
        <panel-related name="addressPanel" field="address" form-view="address-form-popup">
            <field name="street"/>
            <field name="area"/>
            <field name="city"/>
            <field name="state"/>
            <field name="zip"/>
            <field name="country"/>
        </panel-related>
        <panel name="sidePanel" sidebar="true">
            <field name="createdOn"/>
            <field name="createdBy"/>
            <field name="updatedOn"/>
            <field name="updatedBy"/>
        </panel>
    </form>

    <form name="address-form-popup"
          title="Address"
          model="com.axelor.apps.contact.db.Address"
          >
        <panel title="Overview" >
            <field name="street"/>
            <field name="area"/>
            <field name="city"/>
            <field name="zip"/>
            <field name="state"/>
            <field name="country"/>
        </panel>
    </form>

</object-views>